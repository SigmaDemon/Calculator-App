        <Button Content="+" Margin="572,392,0,0" VerticalAlignment="Top" Height="95" Width="146" Click="Button_Plus" Background="Yellow"/>
        <Button Content="C" Margin="43,492,0,0" VerticalAlignment="Top" Height="95" Width="146" Click="Button_Clear" Background="Yellow"/>
        <Button Content="0" Margin="203,492,0,0" VerticalAlignment="Top" Height="95" Width="146" Click="Button0" Background="Blue"/>
        <Button Content="." Margin="365,492,0,0" VerticalAlignment="Top" Height="95" Width="146" Click="Button_Dot" Background="Yellow"/>
        <Button Content="-" Margin="572,492,0,0" VerticalAlignment="Top" Height="95" Width="146" Click="Button_Minus" Background="Yellow"/>
        <Button Content="=" Margin="44,609,0,0" VerticalAlignment="Top" Height="95" Width="675" Click="Button_Equals" Background="Blue"/>

    </Grid>
